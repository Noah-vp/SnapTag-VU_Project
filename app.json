{
  "name": "snaptag",
  "slug": "snaptag",
  "version": "1.0.0",
  "orientation": "portrait",
  "icon": "./assets/icons/logo.png",
  "splash": {
    "image": "./assets/splash.png",
    "resizeMode": "cover",
    "backgroundColor": "#1b7ced"
  },
  "userInterfaceStyle": "dark",
  "newArchEnabled": true,
  "platforms": [
    "ios",
    "android"
  ],
  "plugins": [
    "@react-native-firebase/app",
    "@react-native-firebase/auth",
    [
      "expo-build-properties",
      {
        "ios": {
          "useFrameworks": "static"
        }
      }
    ],
    [
      "expo-camera",
      {
        "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
        "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
        "recordAudioAndroid": true
      }
    ]
  ],
  "ios": {
    "supportsTablet": true,
    "bundleIdentifier": "com.noahvp.snaptag",
    "googleServicesFile": "./GoogleService-Info.plist",
    "infoPlist": {
      "NSCameraUsageDescription": "We need access to your camera for the app."
    }
  },
  "extra": {
    "eas": {
      "projectId": "7b3ec7f9-38d7-4469-adf4-f4dbfc0eac4d"
    }
  },
  "android": {
    "package": "com.noah_vp.snaptag",
    "permissions": [
      "android.permission.CAMERA",
      "android.permission.RECORD_AUDIO"
    ]
  },
  "owner": "noah_vp",
  "runtimeVersion": "1.0.0", 
  "updates": {
    "url": "https://u.expo.dev/7b3ec7f9-38d7-4469-adf4-f4dbfc0eac4d"
  }
}
